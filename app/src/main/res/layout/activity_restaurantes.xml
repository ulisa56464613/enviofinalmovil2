<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".restaurantes"
    android:background="@drawable/foto">


    <TextView
        android:id="@+id/titulohomerestaurantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="DESCUBRE NUESTROS RESTAURANTES"
        app:layout_constraintVertical_bias="0.05"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/resenarestaurantes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/titulohomerestaurantes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="25dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:text="@string/descripcionrestaurantes" />


    <ImageView
        android:id="@+id/iconorestaurantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/botones"
        app:layout_constraintTop_toBottomOf="@id/resenarestaurantes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.01" />

    <Button
        android:id="@+id/botonvermasrestaurantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#95a532"
        app:layout_constraintTop_toBottomOf="@id/iconorestaurantes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.05"
        android:text="ver mas"
        />


</androidx.constraintlayout.widget.ConstraintLayout>