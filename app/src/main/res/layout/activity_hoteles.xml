<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hospedaje"
    tools:context=".Hoteles">

    <TextView
        android:id="@+id/titulohomehoteles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="DESCUBRE NUESTROS HOTELES"
        app:layout_constraintVertical_bias="0.05"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/resenahoteles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/titulohomehoteles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="25dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:text="@string/descripcionhoteles" />


    <ImageView
        android:id="@+id/iconohoteles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/botones"
        app:layout_constraintTop_toBottomOf="@id/resenahoteles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.01" />

    <Button
        android:id="@+id/botonvermashoteles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#95a532"
        app:layout_constraintTop_toBottomOf="@id/iconohoteles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.05"
        android:text="ver mas"
        />

</androidx.constraintlayout.widget.ConstraintLayout>